<Window x:Class="DicingBlade.Views.MachineSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicingBlade.Views"
        mc:Ignorable="d"
        Title="MachineSettingsView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="245*"/>
            <RowDefinition Height="174*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="581*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Приводы">
            <Grid >
                <Grid.Resources>
                    <Style TargetType="TextBox">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Width" Value="80"/>
                        <Setter Property="Height" Value="30"/>
                        <Setter Property="Margin" Value="3"/>
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>                   
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="X" Grid.Row="1"/>
                <Label Content="Y" Grid.Row="2"/>
                <Label Content="Z" Grid.Row="3"/>
                <Label Content="U" Grid.Row="4"/>
                <Label Content="A" Grid.Column="1"/>
                <Label Content="V серв." Grid.Column="2"/>
                <Label Content="V медл." Grid.Column="3"/>
                <Label Content="V быстр." Grid.Column="4"/>
                <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" Text="TextBox"/>
                <TextBox Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="{Binding XVelService}"/>
                <TextBox Grid.Column="3" Grid.Row="1" TextWrapping="Wrap" Text="{Binding XVelLow}"/>
                <TextBox Grid.Column="4" Grid.Row="1" TextWrapping="Wrap" Text="{Binding XVelHigh}"/>
                <TextBox Grid.Column="1" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" />
                <TextBox Grid.Column="2" Grid.Row="2" TextWrapping="Wrap" Text="{Binding YVelService}"/>
                <TextBox Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" Text="{Binding YVelLow}"/>
                <TextBox Grid.Column="4" Grid.Row="2" TextWrapping="Wrap" Text="{Binding YVelHigh}"/>
                <TextBox Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Text="TextBox"/>
                <TextBox Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Text="{Binding ZVelService}"/>
                <TextBox Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" Text="{Binding ZVelLow}"/>
                <TextBox Grid.Column="4" Grid.Row="3" TextWrapping="Wrap" Text="{Binding ZVelHigh}"/>
                <TextBox Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" Text="TextBox"/>
                <TextBox Grid.Column="2" Grid.Row="4" TextWrapping="Wrap" Text="{Binding UVelService}"/>
                <TextBox Grid.Column="3" Grid.Row="4" TextWrapping="Wrap" Text="{Binding UVelLow}"/>
                <TextBox Grid.Column="4" Grid.Row="4" TextWrapping="Wrap" Text="{Binding UVelHigh}"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
